@{
}
@{
    if (ViewData["PageMessage"] != null)
    {
        var PageMessage = ViewData["PageMessage"] as dynamic;

        <div class="container">
            <div class="alert alert-@PageMessage.type m-2" role="alert">
           
                <h4 class="alert-heading">@PageMessage.title</h4>
            
                <hr />

                @PageMessage.message

                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
         </div>
        }
    }