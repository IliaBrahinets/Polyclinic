@model PatientRecord

@{
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreatePatientRecord</title>
</head>
<body>

<h4>PatientRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePatientRecord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class='form-group'>
                <label asp-for="Patient">Пациент</label>
                <select class="form-control" asp-for="PatientId">
                    @foreach (Patient Patient in ViewBag.Patients)
                    {

                        <option value="@Patient.Id">@Patient.Surname</option>

                    }
                </select>
            </div>
            <div class='form-group'>
                <label asp-for="Doctor">Врач</label>
                <select class="form-control" asp-for="DoctorId">
                    @foreach (Doctor Doctor in ViewBag.Doctors)
                    {

                        <option value="@Doctor.Id">@Doctor.Surname</option>

                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
