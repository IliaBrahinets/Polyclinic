<div class='mt-4'>
    <div class='row'>
        <div class='col-md-3 mb-2 text-center'>
            <a class='btn btn-light' href = '/Registrator/CreateDoctor'>Добавить нового врача</a>
        </div>
    </div>
    <div class='row'>
        <div class='col-md-3'>
            <div class='card p-3 mb-2'>
                <form>
                    <div class='form-group'>
                        <label for='speciality'>Специальность врача</label>
                        <select class='form-control form-control-sm' name='speciality'>
                            <option>Окулист</option>
                            <option>Дерматолог</option>
                            <option>Невролог</option>
                            <option>Хирург</option>
                            <option>Терапевт</option>
                        </select>
                        <label class='mt-1' for='region'>Участок</label>
                        <select class='form-control form-control-sm' name='region'>
                            <option>ул.Осенняя</option>
                            <option>Дерматолог</option>
                            <option>Невролог</option>
                            <option>Хирург</option>
                            <option>Терапевт</option>
                        </select>
                    </div>
                    <div class='text-center mt-4'>
                        <button type="submit" class="btn btn-primary">Показать</button>
                    </div>
                </form>
            </div>
        </div>
