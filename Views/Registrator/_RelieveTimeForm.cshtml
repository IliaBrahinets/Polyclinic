@model RelieveTime


<form asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly" class="text-danger" id="RelieveTimeForm"></div>
    
    <input asp-for="Id" hidden />
     
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label asp-for="StartTime">Начало</label>
                <input class = "form-control" placeholder="Начало..." asp-for="StartTime" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="EndTime">Конец</label>
                <input class="form-control" placeholder="Конец..." asp-for="EndTime" />
                <span asp-validation-for="EndTime"  class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <textarea class="form-control" placeholder="Описание..." asp-for="Description" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class='form-group text-center'>
        <button class='btn btn-primary' type='submit'>
            Сохранить
        </button>
    </div>
</form>